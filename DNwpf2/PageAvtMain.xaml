<Page x:Class="DNwpf2.PageAvtMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DNwpf2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAvtMain">

    <Grid>
        <StackPanel Orientation="Vertical" Width="300" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="Авторизация" HorizontalAlignment="Center"  FontSize="24"/>
            <Label Content="Ваше имя"  FontSize="16"/>
            <TextBox x:Name="textBox" TextWrapping="Wrap"  FontSize="16" Padding="5"/>
            <Label Content="Ваша фамилия"  FontSize="16"/>
            <TextBox TextWrapping="Wrap" FontSize="16" Padding="5"/>
            <Label Content="Пароль"  FontSize="16"/>
            <PasswordBox Padding="5"></PasswordBox>
            <Button Content="Вход" FontSize="20" Margin="0,5,0,0" Click="Button_Click_Avt"></Button>
        </StackPanel>
    </Grid>
</Page>
